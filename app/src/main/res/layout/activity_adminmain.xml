<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#d6d6d6">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="781dp"
        android:orientation="vertical"
        android:padding="20dp"
        >

        <TextView
            android:id="@+id/tv"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:background="#d6d6d6"
            android:drawablePadding="8dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:padding="10dp"
            android:shadowColor="#33000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="3"
            android:text="Welcome to the administrator interface!"
            android:textColor="#000000"
            android:textSize="25sp"
            android:textStyle="bold"
            android:typeface="serif" />

        <ImageView
            android:layout_width="229dp"
            android:layout_height="156dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="30dp"
            android:src="@drawable/logo2" />

        <Button
            android:id="@+id/bt_updatee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/btn_selector"
            android:text="修改"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:typeface="serif" />


        <Button
            android:id="@+id/bt_deletee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/btn_selector"
            android:text="删除"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:typeface="serif" />

        <Button
            android:id="@+id/bt_read"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/btn_selector"
            android:text="查看"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:typeface="serif" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 上面的 LinearLayout 包含 ImageButton -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <ImageButton
                android:id="@+id/bt_home"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_marginStart="100dp"
                android:layout_marginEnd="50dp"
                android:layout_weight="1"
                android:src="@drawable/function" />

            <ImageButton
                android:id="@+id/bt_personal"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_marginStart="100dp"
                android:layout_marginEnd="100dp"
                android:layout_weight="1"
                android:src="@drawable/personal" />
        </LinearLayout>

        <!-- 下面的 LinearLayout 包含 TextView -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_home_page"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginStart="95dp"
                android:layout_marginEnd="50dp"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:text="主页"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_personal_center"
                android:layout_width="58dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginStart="90dp"
                android:layout_marginEnd="90dp"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:text="个人页"
                android:textSize="15sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>




</LinearLayout>
